{
  "name": "autodroid-worker",
  "author": "luizfelipelaviola",
  "version": "0.0.1",
  "main": "./src/index.js",
  "license": "MIT",
  "engines": {
    "node": "v20.17.0"
  },
  "scripts": {
    "dev": "tsx watch ./src/index.ts -e development",
    "dev:debug": "tsx --inspect-brk ./src/index.ts -e development",
    "build": "tsup",
    "lint": "run-p -c lint:*",
    "lint:eslint": "eslint '{src,test}/**/*.{ts,tsx}' --fix",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest run --config test/config/vitest.config.ts",
    "test:watch": "vitest --config test/config/vitest.config.ts",
    "test:debug": "node --inspect ./node_modules/.bin/vitest --config test/config/vitest.config.ts --no-file-parallelism --testTimeout 60000",
    "test:unit": "vitest run --config test/config/vitest.config.ts --project unit",
    "test:unit:watch": "vitest --config test/config/vitest.config.ts --project unit",
    "test:unit:debug": "node --inspect ./node_modules/.bin/vitest run --config test/config/vitest.config.ts --project unit --no-file-parallelism --testTimeout 60000",
    "test:integration": "vitest run --config test/config/vitest.config.ts --project integration",
    "test:integration:watch": "vitest --config test/config/vitest.config.ts --project integration",
    "test:integration:debug": "node --inspect ./node_modules/.bin/vitest run --config test/config/vitest.config.ts --project integration --no-file-parallelism --testTimeout 60000",
    "test:e2e": "vitest run --config test/config/vitest.config.ts --project e2e",
    "test:e2e:watch": "vitest --config test/config/vitest.config.ts --project e2e",
    "test:e2e:debug": "node --inspect ./node_modules/.bin/vitest run --config test/config/vitest.config.ts --project e2e --no-file-parallelism --testTimeout 60000",
    "prepare": "husky"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "async-retry": "^1.3.3",
    "autodroid": "^0.0.5",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "dockerode": "^4.0.2",
    "form-data": "^4.0.1",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",
    "semver": "^7.6.3",
    "socket.io-client": "^4.8.1",
    "systeminformation": "^5.23.5",
    "validator": "^13.12.0",
    "winston": "^3.16.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@swc/core": "^1.9.1",
    "@swc/helpers": "^0.5.13",
    "@types/archiver": "^6.0.3",
    "@types/async-retry": "^1.4.9",
    "@types/dockerode": "^3.3.31",
    "@types/node": "^22.9.0",
    "@types/semver": "^7.5.8",
    "@types/validator": "^13.12.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/coverage-v8": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-helpers": "1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "regenerator-runtime": "^0.14.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "5.6.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "4",
    "vitest": "^2.1.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
